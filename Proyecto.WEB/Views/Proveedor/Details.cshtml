@model Proyecto.WEB.Models.ViewModels.ProveedorViewModel

@{ 
    ViewData["Title"] = "Detalles del Proveedor";
}

@await Html.PartialAsync("_NotificationMessages")

<h2>Detalles del Proveedor</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Teléfono</dt>
    <dd class="col-sm-9">@Model.Telefono</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Dirección</dt>
    <dd class="col-sm-9">@Model.Direccion</dd>

    <dt class="col-sm-3">Activo</dt>
    <dd class="col-sm-9">@((Model.Activo) ? "Sí" : "No")</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.IdProveedor" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
