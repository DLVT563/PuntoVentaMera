@model IEnumerable<Proyecto.WEB.Models.ViewModels.ClienteViewModel>

@{ 
    ViewData["Title"] = "Lista de Clientes";
}

@await Html.PartialAsync("_NotificationMessages")

<h2>Lista de Clientes</h2>
<hr />

<a asp-action="Create" class="btn btn-primary mb-3">Nuevo Cliente</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
