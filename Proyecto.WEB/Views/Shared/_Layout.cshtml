@{
    var successMessage = TempData.Peek("Exito") as string;
    var errorMessage = TempData.Peek("Error") as string;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto.WEB</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto.WEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar" aria-label="Navegación principal">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Proyecto.WEB</a>
                <button class="navbar-toggler js-navbar-toggle" type="button" aria-expanded="false" aria-controls="navbarMenu">
                    <span class="navbar-toggler-icon" aria-hidden="true"></span>
                    <span class="sr-only">Abrir menú</span>
                </button>
                <div class="navbar-collapse js-navbar-menu" id="navbarMenu">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="Index">Clientes</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Categoria" asp-action="Index">Categorías</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Proveedor" asp-action="Index">Proveedores</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Ventas" asp-action="Index">Ventas</a></li>
                        }
                        else if (User.IsInRole("Vendedor"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Ventas" asp-action="Index">Ventas</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a></li>
                        }
                        else if (User.IsInRole("Cajero"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Ventas" asp-action="Crear">Registrar Venta</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">Salir</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="container mt-3">
            @if (!string.IsNullOrWhiteSpace(successMessage))
            {
                <div class="alert alert-success alert-dismissible js-alert" role="alert">
                    <div class="alert-content">
                        <strong>Éxito:</strong> @successMessage
                    </div>
                    <button type="button" class="btn-close js-alert-close" aria-label="Cerrar notificación">&times;</button>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible js-alert" role="alert">
                    <div class="alert-content">
                        <strong>Error:</strong> @errorMessage
                    </div>
                    <button type="button" class="btn-close js-alert-close" aria-label="Cerrar notificación">&times;</button>
                </div>
            }

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            POS - Mera - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
