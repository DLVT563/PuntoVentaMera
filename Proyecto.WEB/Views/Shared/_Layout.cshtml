<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto.WEB</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <nav class="site-nav" aria-label="Navegación principal">
            <div class="site-nav__brand">
                <a class="site-brand" asp-area="" asp-controller="Home" asp-action="Index">Proyecto.WEB</a>
                <button class="site-nav__toggle" type="button" aria-expanded="false" aria-controls="primary-navigation" data-nav-toggle>
                    <span class="sr-only">Alternar menú</span>
                    <span aria-hidden="true">☰</span>
                </button>
            </div>
            <div class="site-nav__menus" id="primary-navigation" data-nav-menu>
                <ul class="site-nav__list">
                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Cliente" asp-action="Index">Clientes</a></li>
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Categoria" asp-action="Index">Categorías</a></li>
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Productos" asp-action="Index">Productos</a></li>
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Proveedor" asp-action="Index">Proveedores</a></li>
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Ventas" asp-action="Index">Ventas</a></li>
                    }
                    else if (User.IsInRole("Vendedor"))
                    {
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Ventas" asp-action="Index">Ventas</a></li>
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Productos" asp-action="Index">Productos</a></li>
                    }
                    else if (User.IsInRole("Cajero"))
                    {
                        <li class="site-nav__item"><a class="site-nav__link" asp-controller="Ventas" asp-action="Crear">Registrar Venta</a></li>
                    }
                </ul>
                <ul class="site-nav__list site-nav__list--secondary">
                    <li class="site-nav__item"><a class="site-nav__link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a></li>
                    <li class="site-nav__item"><a class="site-nav__link" asp-area="" asp-controller="Login" asp-action="Logout">Salir</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div id="notification-container" aria-live="polite" aria-atomic="true"></div>
    @await Html.PartialAsync("_NotificationMessages")

    <div class="app-shell">
        <main class="app-main" role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="site-footer__content">
            POS - Mera - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
