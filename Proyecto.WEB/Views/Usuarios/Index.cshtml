@model IEnumerable<Proyecto.WEB.Models.ViewModels.UsuarioViewModel>

@{ 
    ViewData["Title"] = "Lista de Usuarios";
}

@await Html.PartialAsync("_NotificationMessages")

<h2>Lista de Usuarios</h2>
<hr />

<a asp-action="Create" class="btn btn-success mb-3">Nuevo Usuario</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Fecha de Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Usuario1</td>
                <td>@item.NombreRol</td>
                <td>@item.FechaCreacion</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
