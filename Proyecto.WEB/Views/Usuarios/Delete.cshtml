@model Proyecto.WEB.Models.ViewModels.UsuarioViewModel

@{ 
    ViewData["Title"] = "Eliminar Usuario";
}

@await Html.PartialAsync("_NotificationMessages")

<h2>¿Desea eliminar este usuario?</h2>
<hr />

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Usuario</dt>
        <dd class="col-sm-9">@Model.Usuario1</dd>

        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9">@Model.NombreRol</dd>

        <dt class="col-sm-3">Fecha Creación</dt>
        <dd class="col-sm-9">@Model.FechaCreacion</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdUsuario" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
