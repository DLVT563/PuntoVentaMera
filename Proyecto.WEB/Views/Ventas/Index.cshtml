@model IEnumerable<Proyecto.WEB.Models.ViewModels.VentaViewModel>

@{
    ViewData["Title"] = "Ventas";
}

<h2>Ventas</h2>

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success">@TempData["Exito"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Crear" class="btn btn-primary">Nueva Venta</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th># Venta</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Cliente</th>
            <th>Pagado</th>
            <th>Fiado</th>
            <th>Anulado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.IdVenta</td>
                <td>@venta.Fecha.ToString("g")</td>
                <td>@venta.Total.ToString("C")</td>
                <td>@venta.IdCliente</td>
                <td>@venta.Pagado</td>
                <td>@venta.EsFiado</td>
                <td>@venta.Anulado</td>
                <td>
                    <a asp-action="Detalle" asp-route-id="@venta.IdVenta" class="btn btn-info btn-sm">Detalle</a>
                    <form asp-action="Anular" asp-route-id="@venta.IdVenta" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('¿Seguro que deseas anular esta venta?');">
                            Anular
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
