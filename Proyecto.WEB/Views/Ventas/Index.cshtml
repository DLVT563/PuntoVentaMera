@model IEnumerable<Proyecto.WEB.Models.ViewModels.VentaViewModel>

@{ 
    ViewData["Title"] = "Ventas";
}

@await Html.PartialAsync("_NotificationMessages")

<h2>Ventas</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Cliente</th>
            <th>Pagado</th>
            <th>Fiado</th>
            <th>Anulado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr class="@(venta.Anulado ? "table-danger" : "")">
                <td>@venta.IdVenta</td>
                <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@venta.Total.ToString("C")</td>
                <td>@(venta.IdCliente)</td>
                <td>@(venta.Pagado ? "Sí" : "No")</td>
                <td>@(venta.EsFiado ? "Sí" : "No")</td>
                <td>@(venta.Anulado ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Detalle" asp-route-id="@venta.IdVenta" class="btn btn-sm btn-info">Detalle</a>
                    @if (!venta.Anulado)
                    {
                        <form asp-action="Anular" asp-route-id="@venta.IdVenta" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('¿Desea anular esta venta?');">Anular</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Crear" class="btn btn-success">Nueva Venta</a>
